{
  "manifest_version": 2,
  "name": "CSS Live reload",
  "description": "Refresh style on page without reload page",
  "version": "1.0.0",
  "icons": {
    "16": "images/reload_16.png",
    "48": "images/reload_48.png",
    "128": "images/reload_128.png"
  },
  "browser_action": {
    "default_icon": "images/reload_128.png",
    "default_title": "CSS Live reload",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["background.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
